{
  "manifest_version": 3,
  "name": "FB Blocker",
  "version": "1.0",
  "description": "Blocks access to Facebook to improve productivity.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage"
  ],
  "host_permissions": [
    "*://*.facebook.com/*"
  ],
  "icons": {
    "16": "icons/16.png",
    "19": "icons/19.png",
    "38": "icons/38.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "19": "icons/19.png",
      "38": "icons/38.png",
      "48": "icons/48.png"
    }
  }
}
